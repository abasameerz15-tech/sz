-- ================= CONFIG =================
local KEY_VALUE = "SZKEY-677991" 
local GET_KEY_URL = "https://link-center.net/3012148/R32dMXkJfMac"
local FILE_NAME = "Abbas_Final_Lock.json"
-- ==========================================

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UIS = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local HttpService = game:GetService("HttpService")

local Player = Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")

-- [ وظائف الحفظ والتحقق ]
local function SaveData(status, customTime)
    if writefile then
        local data = {
            LastVerify = customTime or os.time(),
            SavedKey = KEY_VALUE,
            IsActive = status
        }
        writefile(FILE_NAME, HttpService:JSONEncode(data))
    end
end

local function GetStoredData()
    if isfile and isfile(FILE_NAME) then
        local success, content = pcall(function() return readfile(FILE_NAME) end)
        if success then return HttpService:JSONDecode(content) end
    end
    return nil
end

local function CheckValidity()
    local data = GetStoredData()
    if not data then return false end
    local timePassed = os.time() - data.LastVerify
    if timePassed >= 86400 then
        if data.IsActive == true then SaveData(false, data.LastVerify) end
        return false
    end
    return data.IsActive == true and data.SavedKey == KEY_VALUE
end

local KeyVerified = CheckValidity()

-- ===== GUI ROOT =====
local Gui = Instance.new("ScreenGui", PlayerGui)
Gui.Name = "Abbas_Fixed_System"
Gui.ResetOnSpawn = false

-- [ زر المطور المستقل ]
if Player.Name == "DEVSZ_STORE" then
    local AdminBtn = Instance.new("TextButton", Gui)
    AdminBtn.Size = UDim2.new(0, 150, 0, 35)
    AdminBtn.Position = UDim2.new(0, 20, 0, 20)
    AdminBtn.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
    AdminBtn.Text = "تنشيط الصلاحية للكل"
    AdminBtn.TextColor3 = Color3.new(1,1,1)
    AdminBtn.Font = Enum.Font.GothamBold
    AdminBtn.TextSize = 12
    AdminBtn.Draggable = true
    AdminBtn.ZIndex = 100
    Instance.new("UICorner", AdminBtn)

    AdminBtn.MouseButton1Click:Connect(function()
        SaveData(true, os.time())
        AdminBtn.Text = "✅ تم التنشيط!"
        task.wait(2)
        AdminBtn.Text = "تنشيط الصلاحية للكل"
    end)
end

-- [ نافذة المفتاح ]
